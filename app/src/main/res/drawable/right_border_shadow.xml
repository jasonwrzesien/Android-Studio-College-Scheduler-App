<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Shadow Layer -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#D3D3D3" /> <!-- Light grey color for the shadow -->
            <corners android:radius="3dp" />
            <padding
                android:right="2dp" /> <!-- Shadow depth for the right -->
        </shape>
    </item>

    <!-- Right Border Layer -->
    <item android:right="2dp">
        <shape android:shape="rectangle">
            <solid android:color="#FFFFFF" /> <!-- Background color of the LinearLayout -->
            <stroke
                android:width="1dp"
                android:color="#808080" /> <!-- Grey color for the right border -->
            <corners android:radius="3dp" />
        </shape>
    </item>

</layer-list>
