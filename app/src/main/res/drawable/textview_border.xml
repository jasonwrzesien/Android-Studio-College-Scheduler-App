<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Shadow Layer -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#D3D3D3" /> <!-- Color of the shadow -->
            <corners android:radius="3dp" /> <!-- Adjust corner radius for the shadow -->
            <padding
                android:bottom="4dp"/>  <!-- Shadow depth for bottom -->
            android:right="2dp" /> <!-- Shadow depth for right -->
        </shape>
    </item>

    <!-- Background Layer -->
    <item android:bottom="2dp" android:right="2dp">
        <shape android:shape="rectangle">
            <solid android:color="#003057" /> <!-- Background color of the TextView -->
            <stroke
                android:width="1dp"
                android:color="#808080" /> <!-- Grey border color -->
            <corners android:radius="3dp" /> <!-- Adjust corner radius for the border -->
        </shape>
    </item>

</layer-list>
